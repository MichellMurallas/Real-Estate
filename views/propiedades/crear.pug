extends ../layout/index

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Real-
      span.font-normal State
    h2.text-center.text-2xl.font-extrabold= pagina

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
      form.space-y-8
          div.space-y-5
            h3.text-lg.leading-6.font-medium.text-gray-900 Información General
            p.text-gray-600 Añade información sobre la propiedad en venta

            div
              label.black.text-sm.upercase.text-gray-500.mb-3.font-bold(for="titulo") Titulo del anuncio
              input#titulo.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Titulo propiedad, Ej, Casa en la playa" type="text" name="titulo")

            div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

              div(class="md:w-1/2")
                label.black.text-sm.upercase.text-gray-500.mb-3.font-bold(for="categoria") Categoria
                select#categoria.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(name="categoria")
                    option(value="") - Seleccione -

              div(class="md:w-1/2")
                label.black.text-sm.upercase.text-gray-500.mb-3.font-bold(for="precio") Precio
                select#precio.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(name="precio")
                  option(value="") - Seleccione -

            div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

              div(class="md:w-1/3")
                label.black.text-sm.upercase.text-gray-500.mb-3.font-bold(for="habitaciones") Habitaciones
                select#habitaciones.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(name="habitaciones")
                    option(value="") - Seleccione -
                    - var n = 1
                        while n < 10
                          option(value=n ) #{n++}

              div(class="md:w-1/3")
                label.black.text-sm.upercase.text-gray-500.mb-3.font-bold(for="estacinamiento") Estacionamiento
                select#estacionamiento.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(name="estacinamiento")
                    option(value="") - Seleccione -
                    - var n = 1
                        while n < 10
                          option(value=n ) #{n++}

              div(class="md:w-1/3")
                label.black.text-sm.upercase.text-gray-500.mb-3.font-bold(for="wc") WC
                select#wc.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(name="wc")
                    option(value="") - Seleccione -
                    - var n = 1
                        while n < 10
                          option(value=n ) #{n++}

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js") 